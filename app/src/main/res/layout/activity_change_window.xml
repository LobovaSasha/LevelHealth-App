    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibolt"
        android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularPhoto"
        app:srcCompat="@drawable/avatar"
        android:scaleType="centerCrop" />


    <Button
        android:id="@+id/button_choose_avatar"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"

        android:background="@drawable/style_button_stroke_text"
        android:paddingHorizontal="30dp"
        android:text="Выбрать"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#018C8B"
        app:layout_constraintEnd_toStartOf="@+id/button_upload_avatar"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic" />

    <Button
        android:id="@+id/button_upload_avatar"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/style_button_stroke_text"

        android:paddingHorizontal="30dp"
        android:text="Загрузить"
        android:textColor="#018C8B"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_choose_avatar" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:ems="10"

        android:hint="Имя"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/input_field"
        android:textColor="@color/text_color_1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"

        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="15dp"

        android:textColor="@color/text_color_1"
        android:textColorHint="@color/input_field"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"

        android:ems="10"
        android:hint="ДД.ММ.ГГГГ"

        android:inputType="date"
        android:padding="10dp"
        android:paddingStart="15dp"

        android:textColorHint="@color/input_field"
        android:textColor="@color/text_color_1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surname" />





