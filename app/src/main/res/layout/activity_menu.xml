<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4FFFB"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="50sp"
        android:background="@drawable/back_arrow" />

    <View
        android:id="@+id/UserFrame"
        android:layout_width="347sp"
        android:layout_height="184sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="138sp"
        android:background="#E6F4F4"
        android:fadingEdge="vertical" />

    <ImageView
        android:id="@+id/UserAvatar"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginLeft="78.5sp"
        android:layout_marginTop="174sp"
        android:src="@drawable/user_avatar" />

    <TextView
        android:id="@+id/NameSurname"
        android:layout_width="111sp"
        android:layout_height="19sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="176.5sp"
        android:text="Имя Фамилия" />

    <TextView
        android:id="@+id/DateOfBirth"
        android:layout_width="51sp"
        android:layout_height="15sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="200.5sp"
        android:text="дд.мм.гг"
        android:textColor="#8D8D8D" />

    <TextView
        android:id="@+id/Mail"
        android:layout_width="109sp"
        android:layout_height="15sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="220.5sp"
        android:text="pochta@gmail.com" />

    <Button
        android:id="@+id/ChangeDataButton"
        android:layout_width="106sp"
        android:layout_height="15sp"
        android:layout_marginLeft="75.5sp"
        android:layout_marginTop="285sp"
        android:text="Изменить данные" />

    <Button
        android:id="@+id/ExitButton"
        android:layout_width="38sp"
        android:layout_height="15sp"
        android:layout_marginLeft="261.5sp"
        android:layout_marginTop="285sp"
        android:text="Выйти" />

    <ImageButton
        android:id="@+id/ReportsButton"
        android:layout_width="390sp"
        android:layout_height="46sp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="386sp"
        android:text="Отчеты"
        android:background="@drawable/reports_button"
        android:textColorHint="#F3FEFA" />

    <ImageButton
        android:id="@+id/SettingsButton"
        android:layout_width="390sp"
        android:layout_height="46sp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="459sp"
        android:background="@drawable/settings_button"
        android:text="Настройки" />

</RelativeLayout>
