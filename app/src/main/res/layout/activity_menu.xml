<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4FFFB"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/BackButton"
        android:onClick="GoToMainActivity"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="50sp"
        android:background="@drawable/back_arrow" />

    <View
        android:id="@+id/UserFrame"
        android:layout_width="347sp"
        android:layout_height="184sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="138sp"
        android:background="@drawable/user_profile_frame"
        android:fadingEdge="vertical" />

    <ImageView
        android:id="@+id/UserAvatar"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginLeft="78.5sp"
        android:layout_marginTop="174sp"
        android:src="@drawable/user_avatar" />

    <TextView
        android:id="@+id/NameSurname"
        android:layout_width="111sp"
        android:layout_height="19sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="176.5sp"
        android:fontFamily="@font/inter_semibolt"
        android:text="Имя Фамилия"
        android:textColor="@color/text_color_1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DateOfBirth"
        android:layout_width="51sp"
        android:layout_height="15sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="200.5sp"
        android:fontFamily="@font/inter_regular"
        android:text="дд.мм.гг"
        android:textColor="#8D8D8D"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/Mail"
        android:layout_width="109sp"
        android:layout_height="15sp"
        android:layout_marginLeft="193.5sp"
        android:layout_marginTop="220.5sp"
        android:fontFamily="@font/inter_regular"
        android:text="pochta@gmail.com"
        android:textColor="@color/text_color_1"
        android:textSize="11sp" />

    <ImageButton
        android:id="@+id/ChangeDataButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="105sp"
        android:layout_height="11sp"
        android:layout_marginLeft="75.5sp"
        android:layout_marginTop="285sp"
        android:background="@drawable/change_data_button"
        android:onClick="GoToChangeWindowActivity" />
        <!--android:fontFamily="@font/inter_regular"
        android:text="Изменить данные"
        android:textColor="@color/input_field"
        android:textSize="12sp"-->


    <ImageButton
        android:id="@+id/ExitButton"
        android:layout_width="36sp"
        android:layout_height="9sp"
        android:layout_marginLeft="261.5sp"
        android:layout_marginTop="285sp"
        android:background="@drawable/exit_button"
        android:onClick="Exit" />
        <!--android:background="@android:color/transparent"
        android:fontFamily="@font/inter_semibolt"
        android:text="Выйти"
        android:textColor="@color/input_field"
        android:textSize="12sp" -->


    <ImageButton
        android:id="@+id/ReportsButton"
        android:onClick="GoToGraphicsActivity"
        android:layout_width="390sp"
        android:layout_height="46sp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="386sp"
        android:text="Отчеты"
        android:background="@drawable/reports_button"
        android:textColorHint="#F3FEFA" />

    <ImageButton
        android:id="@+id/SettingsButton"
        android:layout_width="390sp"
        android:layout_height="46sp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="459sp"
        android:background="@drawable/settings_button"
        android:text="Настройки" />


</RelativeLayout>
