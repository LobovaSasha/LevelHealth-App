<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_confirm_number"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="739dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/confirm_email"
        android:textColor="@color/main_color_5"
        android:textSize="12sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/registration"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/text_color_1"
        tools:text="@string/registration" />

    <EditText
        android:id="@+id/Number"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="517dp"
        android:text="E-mail"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="12sp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="597dp"
        android:text="Пароль"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="12sp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Surname"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="277dp"
        android:text="Фамилия"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="357dp"
        android:text="Имя"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/Birthday"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="437dp"
        android:text="ДД.ММ.ГГГГ"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="12sp"
        android:ems="10"
        android:inputType="date" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="675dp"
        android:buttonTint="@color/main_color_5"
        android:textColor="@color/text_color_1"
        android:paddingLeft="15dp"
        android:textSize="10sp"
        android:text="Я даю согласие на хранение и обработку персональных данных" />

</RelativeLayout>

