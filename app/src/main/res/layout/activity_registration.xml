<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/sign_background"
tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sign_background" />

    <Button
        android:id="@+id/button_confirm_number"
        android:layout_width="321dp"
        android:layout_height="45dp"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:background="@drawable/style_button_stroke_text"
        android:onClick="onClickSaveBD"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Создать учётную запись"
        android:textAllCaps="false"
        android:textColor="@color/stroke_text"
        android:textColorHint="@color/stroke_text"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:text="@string/registration"
        android:textStyle="bold"
        android:textSize="26sp"
        tools:text="@string/registration" />

    <EditText
        android:id="@+id/EmailBDreg"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_below="@+id/BirthBDreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:ems="10"
        android:hint="example@email.com"
        android:paddingLeft="24dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/black_new"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/PasswordBDreg"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_below="@+id/EmailBDreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Пароль (не менее 6 знаков)"
        android:inputType="textPassword"
        android:paddingLeft="24dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/black_new"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/SurnameBDreg"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_below="@+id/Hello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:hint="Фамилия"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/black_new"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/NameBDreg"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_below="@+id/SurnameBDreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:hint="Имя"
        android:paddingLeft="24dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/black_new"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/BirthBDreg"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_below="@+id/NameBDreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_number_style"
        android:elevation="5dp"
        android:ems="10"
        android:hint="ДД.ММ.ГГГГ"
        android:inputType="date"
        android:paddingLeft="24dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/black_new"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/PasswordBDreg"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/PasswordBDreg"
         />

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:fontFamily="sans-serif"
        android:fontFeatureSettings=""
        android:letterSpacing="0.01"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="-5dp"
        android:paddingLeft="5dp"
        android:onClick="GoToPersonalDataConsent"
        android:text="@string/terms_of_service"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="13dp"
        android:layout_alignEnd="@id/PasswordBDreg"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox" />

</RelativeLayout>