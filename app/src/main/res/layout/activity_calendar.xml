<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calendar_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BackButtonCalendar"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/icon_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GoToMainActivity"/>


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="347sp"
        android:layout_height="308sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/calendarstyle"
        android:elevation="10sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackButtonCalendar" />

    <Button
        android:id="@+id/MenuButtonCalendar"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="358sp"
        android:layout_marginTop="52dp"
        android:background="@drawable/icon_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GoToMainActivity"/>


    <View
        android:id="@+id/moodBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/calendar_btn_bg"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <View
        android:id="@+id/sleepBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/calendar_btn_bg"
        android:elevation="5dp"
        app:layout_constraintStart_toEndOf="@+id/moodBg"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <View
        android:id="@+id/headacheBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/calendar_btn_bg"
        android:elevation="5dp"
        app:layout_constraintStart_toEndOf="@+id/sleepBg"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <ImageView
        android:id="@+id/moodImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/smile1_2"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/moodBg"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <ImageView
        android:id="@+id/sleepImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/sleep1_1"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/sleepBg"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <ImageView
        android:id="@+id/headacheImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/headache"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/headacheBg"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

