<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibolt"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="32sp"
                android:layout_marginBottom="2sp"
                android:background="@android:color/transparent"
                android:onClick="GoToTakingPillsActivity"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/icon_back_arrow"
                app:tint="@color/turquoise" />
            <ImageButton
                android:id="@+id/buttonCalendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="33sp"
                android:layout_marginBottom="2sp"
                android:background="@android:color/transparent"
                android:onClick="GoToMainActivity"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/icon_home"
                app:tint="@color/turquoise" />

        </FrameLayout>
        <TextView
            android:id="@+id/taking_pills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/inter_semibolt"
            android:text="@string/add_pill"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/taking_pills"
            tools:layout_editor_absoluteX="0dp">
                <EditText
                    android:id="@+id/pill_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:elevation="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingLeft="24dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/inter_regular"
                    android:hint="@string/pill_name"
                    android:textColorHint="@color/black_new"
                    android:textColor="@color/text_color_1"
                    android:background="@drawable/some_id"
                    android:textSize="16dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout1"
            tools:layout_editor_absoluteX="0dp">

            <RelativeLayout
                android:id="@+id/taking_pill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="30dp"
                android:background="@drawable/some_id"
                android:drawableEnd="@drawable/icon_forward_arrow"
                android:elevation="7dp">

                <TextView
                    android:id="@+id/taking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_semibolt"
                    android:text="Прием 1"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/pill_plus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:src="@drawable/plus"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="24dp"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taking"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/pill_time"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taking"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/pill_dose"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"/>
                <EditText
                    android:id="@+id/time1"
                    android:layout_width="91dp"
                    android:layout_height="56dp"
                    android:layout_below="@+id/time"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="40dp"
                    android:inputType="time"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:hint="00:00"
                    android:textColorHint="@color/black_new"
                    android:background="@drawable/pill_time"
                    android:scaleType="fitCenter"/>

                <EditText
                    android:id="@+id/dose1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:layout_below="@+id/dose"
                    android:layout_alignRight="@id/dose"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/pill_time"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/black_new"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <ImageButton
                    android:id="@+id/minus"
                    android:onClick="MinusAction"
                    android:layout_width="10dp"
                    android:layout_height="56dp"
                    android:layout_toLeftOf="@id/dose1"
                    android:layout_alignTop="@id/dose1"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:src="@drawable/minus_small"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:id="@+id/plus"
                    android:onClick="PlusAction"
                    android:layout_width="10dp"
                    android:layout_height="56dp"
                    android:layout_toRightOf="@id/dose1"
                    android:layout_alignTop="@id/dose1"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:src="@drawable/plus_small"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="56dp"
                    android:layout_alignLeft="@id/time1"
                    android:layout_alignTop="@id/time1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:src="@drawable/access_time"
                    android:scaleType="fitCenter" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/taking_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/inter_semibolt"
            android:text="@string/taking_start"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/taking_start"
            tools:layout_editor_absoluteX="0dp">

            <RelativeLayout
                android:id="@+id/taking_start1"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/some_id"
                android:drawableEnd="@drawable/icon_forward_arrow"
                android:elevation="7dp"
                android:paddingRight="22dp">

                <TextView
                    android:id="@+id/calendar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:text="01.12.2022"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/icon_calendar" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/taking_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/inter_semibolt"
            android:text="@string/taking_days"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

        <FrameLayout
            android:id="@+id/frameLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/taking_days"
            tools:layout_editor_absoluteX="0dp">

            <RelativeLayout
                android:id="@+id/taking_days1"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/icon_forward_arrow"
                android:clipToPadding="false"
                android:background="@drawable/some_id"
                android:elevation="7dp">

                <Spinner
                    android:id="@+id/taking_days_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="0dp"
                    android:background="@color/transparent"
                    android:popupBackground="@drawable/some_id"
                    android:dropDownWidth="fill_parent"
                     />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/arrow_down"
                    android:layout_alignRight="@id/taking_days_button"/>
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/taking_pills_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/inter_semibolt"
            android:text="@string/comment"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

        <FrameLayout
            android:id="@+id/frameLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/taking_pills_comment"
            tools:layout_editor_absoluteX="0dp"
            android:paddingBottom="50dp">
            <EditText
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:elevation="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/inter_regular"
                android:textColorHint="@color/black_new"
                android:textColor="@color/stroke_text"
                android:background="@drawable/some_id"
                android:textSize="16dp"
                />
        </FrameLayout>
        <!--include layout="@layout/bottom_calendar" /-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>