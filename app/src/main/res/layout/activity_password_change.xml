<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_confirm_number"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/reset_pass"
        android:textColor="@color/main_color_5"
        android:textSize="12sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="274dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/new_pass"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:text="@string/new_pass" />

    <EditText
        android:id="@+id/Surname"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="277dp"
        android:text="Новый пароль"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="357dp"
        android:text="Подтвердите новый пароль"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:background="@drawable/field"
        android:textColor="@color/input_field"
        android:textSize="16sp" />

</RelativeLayout>

